<% if @search_results.blank? %>
    <div class="py-1 px-3">No results...</div>
<% else %>
    <% @search_results.each do |ingredient| %>
        <div
            class="py-2 px-3 cursor-pointer hover:bg-slate-400"
            hx-get="/ingredients/<%= ingredient.id %>"
            hx-target="#filtering-by"
            hx-swap="afterend"
            data-action="click->recipes#hideSearchResults"
        >
                <%= ingredient.title %>
        </div>
    <% end %>
<% end %>
